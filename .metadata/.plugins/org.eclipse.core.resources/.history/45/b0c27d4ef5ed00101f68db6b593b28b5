#include "AuditMessageTypeFilterNotification.h"

#include "AuditMessage.h"

AuditMessageTypeFilterNotification::AuditMessageTypeFilterNotification(AuditMessageNotificationSettings* notification_settings): AuditMessageNotification(notification_settings){
}

AuditMessageTypeFilterNotification::~AuditMessageTypeFilterNotification() {
}

bool AuditMessageTypeFilterNotification::processExtraAttributes(){
  setFilterString(readXMLAttribute("type"));
  return true;
}

bool AuditMessageTypeFilterNotification::checkNotification(AuditMessage* message){
  if (message->type == filterString())
    return true;
  else
    return false;
}

QString AuditMessageTypeFilterNotification::elementName(){
  return "event";
}

void AuditMessageTypeFilterNotification::writeExtraAttributes(QXmlStreamWriter* xml_writer){
  xml_writer->writeAttribute("type", filterString());
}
